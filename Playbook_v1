const COL = {
  pronto: { bg: "#0e1f16", border: "#154834", label: "#a8c8b8", dot: "#154834", sub: "#4a7a60" },
  aovivo: { bg: "#1e1800", border: "#e1af58", label: "#e1af58", dot: "#e1af58", sub: "#7a6030" },
  tools:  { bg: "#1a1a18", border: "#767676", label: "#b8b8b4", dot: "#767676", sub: "#505050" },
};

export default function PlaybookDetalhado() {
  const [activePhase, setActivePhase] = useState(1);
  const phase = phases[activePhase];

  const totalPronto = phase.pronto.reduce((a, c) => a + c.items.length, 0);

  return (
    <div style={{ background: "#2d2b2b", minHeight: "100vh", fontFamily: "system-ui, sans-serif", color: "#edece6", display: "flex", flexDirection: "column", fontSize: 13 }}>

      {/* Header */}
      <div style={{ background: "#1a1a18", borderBottom: "2px solid #e1af58", padding: "14px 20px 10px", flexShrink: 0 }}>
        <div style={{ display: "flex", justifyContent: "space-between", alignItems: "center" }}>
          <div>
            <div style={{ fontSize: 9, letterSpacing: 5, color: "#e1af58", fontWeight: 700, marginBottom: 3 }}>CHAMPION BY DESIGN¬Æ ¬∑ OCT√ìGONO DA LIDERAN√áA¬Æ</div>
            <div style={{ fontSize: 17, fontWeight: 700, color: "#edece6" }}>Entreg√°veis por Fase ‚Äî Playbook Detalhado</div>
            <div style={{ fontSize: 10, color: "#767676", marginTop: 2 }}>Pr√©-pronto ¬∑ Ao vivo ¬∑ Ferramentas e refer√™ncias ¬∑ 10 fases ¬∑ Mar√ßo‚ÄìDezembro 2026</div>
          </div>
          <div style={{ display: "flex", gap: 10 }}>
            {[["‚ú¶ Pr√©-pronto", "#154834"], ["‚óè Ao Vivo", "#e1af58"], ["‚óÜ Ferramentas", "#767676"]].map(([l, c]) => (
              <div key={l} style={{ fontSize: 10, color: c, background: `${c}11`, border: `1px solid ${c}33`, borderRadius: 4, padding: "3px 8px" }}>{l}</div>
            ))}
          </div>
        </div>
      </div>

      <div style={{ display: "flex", flex: 1, overflow: "hidden" }}>

        {/* Sidebar */}
        <div style={{ width: 120, flexShrink: 0, background: "#1a1a18", borderRight: "1px solid #3a3a38", overflowY: "auto" }}>
          {phases.map((p, i) => {
            const active = activePhase === i;
            return (
              <button key={i} onClick={() => setActivePhase(i)} style={{
                width: "100%", padding: "9px 10px 9px 12px",
                background: active ? `${p.color}cc` : "transparent",
                border: "none", borderLeft: active ? `3px solid ${p.accent}` : "3px solid transparent",
                borderBottom: "1px solid #3a3a38", cursor: "pointer", textAlign: "left",
              }}>
                <div style={{ fontSize: 10, fontWeight: 700, color: active ? p.accent : "#767676", letterSpacing: 1 }}>{p.label}</div>
                <div style={{ fontSize: 10, color: active ? "#edece6" : "#767676", marginTop: 1, lineHeight: 1.3 }}>{p.title}</div>
              </button>
            );
          })}
        </div>

        {/* Content */}
        <div style={{ flex: 1, overflowY: "auto", padding: "14px 16px 24px" }}>

          {/* Phase title bar */}
          <div style={{ background: `linear-gradient(135deg,${phase.color} 0%,#2d2b2b 100%)`, border: `1px solid ${phase.accent}44`, borderRadius: 8, padding: "12px 16px", marginBottom: 14, display: "flex", justifyContent: "space-between", alignItems: "center" }}>
            <div style={{ display: "flex", alignItems: "center", gap: 12 }}>
              <span style={{ fontSize: 30, lineHeight: 1, color: phase.accent }}>{phase.icon}</span>
              <div>
                <div style={{ fontSize: 9, letterSpacing: 4, color: phase.accent, marginBottom: 2 }}>{phase.label} ¬∑ {phase.subtitle}</div>
                <div style={{ fontSize: 17, fontWeight: 700, color: "#edece6" }}>{phase.title}</div>
                <div style={{ fontSize: 10, color: "#c8c4b8", marginTop: 1 }}>{phase.etapa}</div>
              </div>
            </div>
            <div style={{ display: "flex", gap: 8 }}>
              {[[totalPronto, "ITENS PRONTOS", COL.pronto.label, COL.pronto.border], [phase.aovivo.length, "AO VIVO", COL.aovivo.label, COL.aovivo.border], [phase.ferramentas.length, "FERRAMENTAS", COL.tools.label, COL.tools.border]].map(([n, l, c, b]) => (
                <div key={l} style={{ textAlign: "center", background: `${b}10`, border: `1px solid ${b}30`, borderRadius: 6, padding: "5px 10px" }}>
                  <div style={{ fontSize: 18, fontWeight: 700, color: c, lineHeight: 1 }}>{n}</div>
                  <div style={{ fontSize: 7, color: "#767676", letterSpacing: 1, marginTop: 1 }}>{l}</div>
                </div>
              ))}
            </div>
          </div>

          {/* 3-column grid */}
          <div style={{ display: "grid", gridTemplateColumns: "1fr 1fr 1fr", gap: 10 }}>

            {/* PR√â-PRONTO */}
            <div style={{ background: COL.pronto.bg, border: `1px solid ${COL.pronto.border}30`, borderRadius: 7, overflow: "hidden" }}>
              <div style={{ background: `${COL.pronto.border}15`, borderBottom: `1px solid ${COL.pronto.border}25`, padding: "8px 12px" }}>
                <div style={{ fontSize: 9, fontWeight: 700, color: COL.pronto.label, letterSpacing: 2 }}>‚ú¶ PR√â-PRONTO</div>
                <div style={{ fontSize: 9, color: "#4a7a60", marginTop: 1 }}>Deve existir antes da entrega desta fase</div>
              </div>
              <div style={{ padding: "10px 12px" }}>
                {phase.pronto.map((sec, si) => (
                  <div key={si} style={{ marginBottom: 12 }}>
                    <div style={{ fontSize: 8, fontWeight: 700, color: COL.pronto.label, letterSpacing: 2, marginBottom: 5, background: `${COL.pronto.border}18`, borderRadius: 3, padding: "2px 6px", display: "inline-block" }}>{sec.cat.toUpperCase()}</div>
                    {sec.items.map((item, ii) => (
                      <div key={ii} style={{ display: "flex", gap: 6, marginBottom: 4 }}>
                        <span style={{ color: COL.pronto.dot, fontSize: 8, marginTop: 3, flexShrink: 0 }}>‚ñ∏</span>
                        <span style={{ fontSize: 11, color: "#c8c4b8", lineHeight: 1.5 }}>{item}</span>
                      </div>
                    ))}
                  </div>
                ))}
              </div>
            </div>

            {/* AO VIVO */}
            <div style={{ background: COL.aovivo.bg, border: `1px solid ${COL.aovivo.border}30`, borderRadius: 7, overflow: "hidden" }}>
              <div style={{ background: `${COL.aovivo.border}15`, borderBottom: `1px solid ${COL.aovivo.border}25`, padding: "8px 12px" }}>
                <div style={{ fontSize: 9, fontWeight: 700, color: COL.aovivo.label, letterSpacing: 2 }}>‚óè AO VIVO</div>
                <div style={{ fontSize: 9, color: "#a08040", marginTop: 1 }}>Acontece em tempo real nesta fase</div>
              </div>
              <div style={{ padding: "10px 12px" }}>
                {phase.aovivo.map((ev, ei) => (
                  <div key={ei} style={{ marginBottom: 10, padding: "8px 10px", background: `${COL.aovivo.border}08`, border: `1px solid ${COL.aovivo.border}18`, borderRadius: 6 }}>
                    <div style={{ fontSize: 10, fontWeight: 700, color: COL.aovivo.label, marginBottom: 4, lineHeight: 1.4 }}>{ev.tipo}</div>
                    <div style={{ fontSize: 11, color: "#b8a87a", lineHeight: 1.6 }}>{ev.desc}</div>
                  </div>
                ))}
              </div>
            </div>

            {/* FERRAMENTAS */}
            <div style={{ background: COL.tools.bg, border: `1px solid ${COL.tools.border}30`, borderRadius: 7, overflow: "hidden" }}>
              <div style={{ background: `${COL.tools.border}15`, borderBottom: `1px solid ${COL.tools.border}25`, padding: "8px 12px" }}>
                <div style={{ fontSize: 9, fontWeight: 700, color: COL.tools.label, letterSpacing: 2 }}>‚óÜ FERRAMENTAS E METODOLOGIA</div>
                <div style={{ fontSize: 9, color: "#8a8a86", marginTop: 1 }}>Com refer√™ncia bibliogr√°fica / t√©cnica</div>
              </div>
              <div style={{ padding: "10px 12px" }}>
                {phase.ferramentas.map((f, fi) => (
                  <div key={fi} style={{ marginBottom: 10, padding: "8px 10px", background: `${COL.tools.border}08`, border: `1px solid ${COL.tools.border}18`, borderRadius: 6 }}>
                    <div style={{ fontSize: 11, fontWeight: 700, color: COL.tools.label, marginBottom: 2 }}>{f.nome}</div>
                    <div style={{ fontSize: 9, color: "#767676", fontStyle: "italic", marginBottom: 4 }}>{f.ref}</div>
                    <div style={{ fontSize: 11, color: "#a0a09a", lineHeight: 1.55 }}>{f.uso}</div>
                  </div>
                ))}
              </div>
            </div>

          </div>

          {/* Nav */}
          <div style={{ display: "flex", justifyContent: "space-between", marginTop: 12 }}>
            <button onClick={() => setActivePhase(Math.max(0, activePhase - 1))} disabled={activePhase === 0}
              style={{ background: activePhase === 0 ? "transparent" : "#3a3a38", border: "1px solid #4a4a48", color: activePhase === 0 ? "#4a4a48" : "#edece6", padding: "7px 14px", borderRadius: 5, cursor: activePhase === 0 ? "default" : "pointer", fontSize: 11 }}>
              ‚Üê Fase Anterior
            </button>
            <span style={{ fontSize: 10, color: "#767676", alignSelf: "center" }}>Fase {activePhase + 1} de {phases.length} ¬∑ navegue pelo menu lateral</span>
            <button onClick={() => setActivePhase(Math.min(phases.length - 1, activePhase + 1))} disabled={activePhase === phases.length - 1}
              style={{ background: activePhase === phases.length - 1 ? "transparent" : "#3a3a38", border: "1px solid #4a4a48", color: activePhase === phases.length - 1 ? "#4a4a48" : "#edece6", padding: "7px 14px", borderRadius: 5, cursor: activePhase === phases.length - 1 ? "default" : "pointer", fontSize: 11 }}>
              Pr√≥xima Fase ‚Üí
            </button>
          </div>
        </div>
      </div>
    </div>
  );
}